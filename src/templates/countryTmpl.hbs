{{#each this}}

  <h2 class="country-name">
    {{name}}
  </h2>
  <div class="country-card">
    <div class="country-info">
      <p class="capital">
      Capital: <span>{{capital}}</span>
      </p>
      <p class="subregion">
      Subregion: <span>{{subregion}}</span>
      </p>
      <p class="population">
      Population: <span>{{population}}</span>
      </p>
      <p class="language">
      Languages:
      </p>
       <ul>
                {{#each languages}}
                <li class="country-language">
                  <span>{{this.name}}</span>
                </li>
                <li class="country-language">
                  <span>{{this.nativeName}}</span>
                </li>
                {{/each}}
            </ul>
      <p class="currency">
      Currencies:
      </p>
       <ul>
                {{#each currencies}}
                <li class="country-currency">
                Code: <span>{{this.code}}</span>
                </li>
                 <li class="country-currency">
                Name: <span>{{this.name}}</span> 
                </li>
                 <li class="country-currency">
                Symbol: <span>{{this.symbol}}</span>
                </li>
                {{/each}}
            </ul>
    </div>
    <div class="country-img">
      <img src="{{flag}}" alt="Flag" class="country-image">
    </div>
  </div>

{{/each}}